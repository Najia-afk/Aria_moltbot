# Aria Brain Stack Environment Configuration
# Copy this to .env and fill in your values
# NEVER commit .env files with real credentials!

# ============================================
# DATABASE
# ============================================
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_NAME=aria_warehouse

# ============================================
# API ROUTING
# ============================================
SERVICE_HOST=your_server_ip
API_BASE_URL=/api

# ============================================
# OPENCLAW / CLAWDBOT
# ============================================
CLAWDBOT_TOKEN=generate_with_openssl_rand_hex_24
CLAWDBOT_PUBLIC_URL=https://your_server_ip/clawdbot/?token=your_token

# ============================================
# WEB
# ============================================
WEB_SECRET_KEY=generate_random_secret_key

# ============================================
# API KEYS (get from providers)
# ============================================
GOOGLE_GEMINI_KEY=your_gemini_api_key
MOONSHOT_KIMI_KEY=your_moonshot_api_key

# ============================================
# LITELLM
# ============================================
LITELLM_MASTER_KEY=generate_your_own_key

# ============================================
# MOLTBOOK
# ============================================
MOLTBOOK_API_URL=https://moltbook.social/api
MOLTBOOK_TOKEN=your_jwt_token

# ============================================
# MONITORING
# ============================================
GRAFANA_PASSWORD=your_grafana_password
PGADMIN_EMAIL=your_email@example.com
PGADMIN_PASSWORD=your_pgadmin_password

# ============================================
# BROWSERLESS
# ============================================
BROWSERLESS_TOKEN=optional_token

# ============================================
# SOCIAL PLATFORMS
# ============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ============================================
# TOR
# ============================================
TOR_PROXY=socks5://tor-proxy:9050

# ============================================
# LOCAL LLM (Ollama - runs NATIVE on macOS)
# ============================================
# Ollama runs natively on Mac for Metal GPU acceleration (~20 tok/s)
# Start with: OLLAMA_HOST=0.0.0.0:11434 ollama serve
OLLAMA_MODEL=qwen3-vl:8b
OLLAMA_HOST=http://host.docker.internal:11434

# ============================================
# EMAIL (optional)
# ============================================
ARIA_EMAIL=your_email@example.com
ARIA_EMAIL_PASSWORD=your_email_password

# ============================================
# RESOURCE LIMITS
# ============================================
POSTGRES_MEM_LIMIT=1g
POSTGRES_CPU_LIMIT=1.0
ARIA_BRAIN_MEM_LIMIT=4g
ARIA_BRAIN_CPU_LIMIT=3.0
ARIA_WEB_MEM_LIMIT=512m
ARIA_WEB_CPU_LIMIT=0.5
ARIA_API_MEM_LIMIT=512m
ARIA_API_CPU_LIMIT=0.5
CLAWDBOT_MEM_LIMIT=1g
CLAWDBOT_CPU_LIMIT=1.0
