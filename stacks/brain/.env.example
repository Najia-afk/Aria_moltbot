# Aria Brain Stack Environment Configuration
# Copy this to .env and fill in your values
# NEVER commit .env files with real credentials!

# ============================================
# DATABASE (aria_warehouse)
# ============================================
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_NAME=aria_warehouse

# ============================================
# API ROUTING
# ============================================
SERVICE_HOST=your_server_ip
API_BASE_URL=/api

# ============================================
# OPENCLAW / CLAWDBOT
# ============================================
# Generate with: openssl rand -hex 24
CLAWDBOT_TOKEN=generate_with_openssl_rand_hex_24
CLAWDBOT_PUBLIC_URL=https://your_server_ip/clawdbot/?session=main&token=your_token

# ============================================
# WEB
# ============================================
WEB_SECRET_KEY=generate_random_secret_key

# ============================================
# API KEYS (get from providers)
# ============================================

# Moonshot/Kimi API Key
# Get from: https://platform.moonshot.cn/
MOONSHOT_KIMI_KEY=

# OpenRouter API Key (optional - free tier has free models)
# Get from: https://openrouter.ai/
OPEN_ROUTER_KEY=

# ============================================
# LITELLM
# ============================================
# Internal key for LiteLLM routing
LITELLM_MASTER_KEY=generate_your_own_key

# ============================================
# MOLTBOOK - Social Platform for AI Agents
# ============================================
# Base API URL (use www subdomain!)
MOLTBOOK_API_URL=https://www.moltbook.com/api/v1

# API Key from registration
# Register at: https://moltbook.com/skill.md
MOLTBOOK_API_KEY=
MOLTBOOK_TOKEN=

# ============================================
# MONITORING
# ============================================
GRAFANA_PASSWORD=your_grafana_password
PGADMIN_EMAIL=your_email@example.com
PGADMIN_PASSWORD=your_pgadmin_password

# ============================================
# BROWSERLESS
# ============================================
BROWSERLESS_TOKEN=

# ============================================
# NETWORK
# ============================================
MAC_LAN_IP=192.168.1.x
MAC_TAILSCALE_IP=100.x.x.x

# NUC Server (optional)
NUC_HOST=
NUC_USER=
NUC_PASSWORD=

# ============================================
# SOCIAL PLATFORMS
# ============================================

# Telegram Bot Token
# Get from: @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ============================================
# TOR
# ============================================
TOR_PROXY=socks5://tor-proxy:9050

# ============================================
# LOCAL LLM (Ollama) - Aria's Default Brain
# ============================================
# Per SOUL.md: local models preferred over cloud
# Start Ollama native for Metal GPU: OLLAMA_HOST=0.0.0.0:11434 ollama serve
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=hf.co/unsloth/GLM-4.7-Flash-REAP-23B-A3B-GGUF:Q3_K_S

# ============================================
# ARIA EMAIL (optional)
# ============================================
ARIA_EMAIL=
ARIA_EMAIL_PASSWORD=

# ============================================
# ARIA X.com / Twitter (optional)
# ============================================
ARIA_LOGIN=
ARIA_X_PASSWORD=
ARIA_X_handle=
ct0_token=
auth_token=

# ============================================
# RESOURCE LIMITS
# ============================================
POSTGRES_MEM_LIMIT=512m
POSTGRES_CPU_LIMIT=1.0
ARIA_BRAIN_MEM_LIMIT=512m
ARIA_BRAIN_CPU_LIMIT=1.0
OLLAMA_MEM_LIMIT=5g
OLLAMA_CPU_LIMIT=3.0
ARIA_WEB_MEM_LIMIT=256m
ARIA_WEB_CPU_LIMIT=0.5
ARIA_API_MEM_LIMIT=256m
ARIA_API_CPU_LIMIT=0.5
CLAWDBOT_MEM_LIMIT=1g
CLAWDBOT_CPU_LIMIT=1.0
LITELLM_MEM_LIMIT=1024m
LITELLM_CPU_LIMIT=1.0

