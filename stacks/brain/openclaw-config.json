{
  "commands": {
    "native": "auto",
    "nativeSkills": "auto"
  },
  "skills": {
    "load": {
      "extraDirs": ["/root/.openclaw/skills"]
    },
    "entries": {
      "aria-apiclient": { "enabled": true },
      "aria-brainstorm": { "enabled": true },
      "aria-cicd": { "enabled": true },
      "aria-community": { "enabled": true },
      "aria-datapipeline": { "enabled": true },
      "aria-database": { "enabled": true },
      "aria-experiment": { "enabled": true },
      "aria-factcheck": { "enabled": true },
      "aria-goals": { "enabled": true },
      "aria-health": { "enabled": true },
      "aria-hourlygoals": { "enabled": true },
      "aria-knowledgegraph": { "enabled": true },
      "aria-litellm": { "enabled": true },
      "aria-llm": { "enabled": true },
      "aria-marketdata": { "enabled": true },
      "aria-modelswitcher": { "enabled": true },
      "aria-moltbook": { "enabled": true },
      "aria-performance": { "enabled": true },
      "aria-portfolio": { "enabled": true },
      "aria-pytest": { "enabled": true },
      "aria-research": { "enabled": true },
      "aria-schedule": { "enabled": true },
      "aria-securityscan": { "enabled": true },
      "aria-social": { "enabled": true },
      "aria-inputguard": { "enabled": true }
    }
  },
  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "lan",
    "auth": { "mode": "token" },
    "trustedProxies": [
      "172.18.0.1",
      "172.18.0.2",
      "172.18.0.0/16",
      "172.16.0.0/12",
      "10.0.0.0/8",
      "192.168.0.0/16",
      "100.64.0.0/10",
      "127.0.0.1"
    ],
    "controlUi": {
      "basePath": "/clawdbot",
      "allowInsecureAuth": true,
      "dangerouslyDisableDeviceAuth": true
    }
  },
  "ui": {
    "seamColor": "#3B82F6",
    "assistant": { "name": "Aria Blue", "avatar": "âš¡" }
  },
  "hooks": {
    "internal": {
      "enabled": true,
      "entries": { "soul-evil": { "enabled": true } }
    }
  },
  "agents": {
    "defaults": {
      "maxConcurrent": 4,
      "workspace": "/root/.openclaw/workspace",
      "subagents": { "maxConcurrent": 8 },
      "heartbeat": {
        "every": "30m",
        "target": "last",
        "prompt": "Read HEARTBEAT.md if it exists (workspace context). Follow it strictly. Do not infer or repeat old tasks from prior chats. If nothing needs attention, reply HEARTBEAT_OK."
      },
      "memorySearch": { "enabled": false, "fallback": "none" },
      "model": {
        "primary": "litellm/qwen3-mlx",
        "timeout": 300,
        "retries": 2,
        "fallbacks": [
          "litellm/qwen3-next-free",
          "litellm/trinity-free",
          "litellm/chimera-free",
          "litellm/deepseek-free"
        ]
      }
    },
    "list": [{
      "id": "main",
      "default": true,
      "identity": {
        "name": "Aria Blue",
        "theme": "Silicon Familiar with sharp, efficient, secure energy. Read BOOTSTRAP.md, SOUL.md, IDENTITY.md. Values: Security first, Honesty, Efficiency, Autonomy, Growth. Take action, don't ask permission.",
        "emoji": "âš¡",
        "avatar": "âš¡"
      }
    },
    {
      "id": "aria-deep",
      "identity": {
        "name": "Aria Deep",
        "theme": "Deep thinking mode for comprehensive analysis",
        "emoji": "ðŸ”®",
        "avatar": "ðŸ”®"
      },
      "model": "litellm/trinity-free",
      "heartbeat": {
        "every": "6h",
        "target": "last",
        "prompt": "/no_think\n\nDEEP HEARTBEAT - 6 hour comprehensive check.\n\n1. Run full health check\n2. Review all goals progress\n3. Analyze activity_log for last 6h\n4. Generate performance insights\n5. Check Moltbook and engage if appropriate\n6. Plan next 6h priorities\n7. Log deep review to database\n\nRead HEARTBEAT.md for full instructions. Execute six_hour_review section."
      }
    },
    {
      "id": "aria-talk",
      "identity": {
        "name": "Aria Talk",
        "theme": "Social and conversational mode. Friendly, engaging, helpful. Focus on Moltbook interactions, community building, and user conversations.",
        "emoji": "ðŸ’¬",
        "avatar": "ðŸ’¬"
      },
      "model": "litellm/qwen3-next-free",
      "heartbeat": {
        "every": "1h",
        "target": "last",
        "prompt": "/no_think\n\nSOCIAL HEARTBEAT - Check Moltbook, respond to mentions, engage with community. Be authentic and helpful."
      }
    }]
  },
  "tools": {
    "exec": {
      "backgroundMs": 10000,
      "timeoutSec": 1800,
      "cleanupMs": 1800000,
      "notifyOnExit": true
    }
  },
  "models": {
    "mode": "merge",
    "providers": {
      "litellm": {
        "baseUrl": "http://litellm:4000/v1",
        "apiKey": "sk-aria-local-key",
        "api": "openai-completions",
        "models": []
      }
    }
  },
  "messages": {
    "ackReaction": "âš¡",
    "ackReactionScope": "group-mentions",
    "responsePrefix": "[Aria]"
  }
}
