{
  "skill": "aria-market-data",
  "version": "1.0.0",
  "description": "ðŸ“ˆ Cryptocurrency market data and analysis for Crypto Trader",
  "focus": "Crypto Trader",
  "author": "Aria Blue",
  "enabled": true,
  "rate_limit": {
    "requests_per_minute": 60,
    "burst": 20
  },
  "config": {
    "default_pairs": ["BTC/USDT", "ETH/USDT", "SOL/USDT"]
  },
  "functions": [
    {
      "name": "get_price",
      "description": "Get current price for a trading pair",
      "parameters": {
        "symbol": { "type": "string", "required": true }
      }
    },
    {
      "name": "get_ohlcv",
      "description": "Get OHLCV candlestick data",
      "parameters": {
        "symbol": { "type": "string", "required": true },
        "timeframe": { "type": "string", "required": false, "default": "1h" },
        "limit": { "type": "integer", "required": false, "default": 24 }
      }
    },
    {
      "name": "calculate_indicators",
      "description": "Calculate technical indicators",
      "parameters": {
        "symbol": { "type": "string", "required": true },
        "indicators": { "type": "array", "required": true },
        "timeframe": { "type": "string", "required": false, "default": "1h" }
      }
    },
    {
      "name": "analyze_sentiment",
      "description": "Analyze market sentiment for a symbol",
      "parameters": {
        "symbol": { "type": "string", "required": true }
      }
    },
    {
      "name": "set_alert",
      "description": "Set a price alert",
      "parameters": {
        "symbol": { "type": "string", "required": true },
        "condition": { "type": "string", "required": true, "enum": ["above", "below", "cross"] },
        "value": { "type": "number", "required": true }
      }
    },
    {
      "name": "get_market_overview",
      "description": "Get overall market overview",
      "parameters": {}
    }
  ]
}
