{
  "skill": "aria-fact-check",
  "version": "1.0.0",
  "description": "üîç Fact-checking and claim verification for Journalist",
  "focus": "Journalist",
  "author": "Aria Blue",
  "enabled": true,
  "rate_limit": {
    "requests_per_minute": 15,
    "burst": 5
  },
  "config": {},
  "functions": [
    {
      "name": "extract_claims",
      "description": "Extract checkable claims from text",
      "parameters": {
        "text": { "type": "string", "required": true }
      }
    },
    {
      "name": "assess_claim",
      "description": "Assess a claim and generate verdict",
      "parameters": {
        "claim_id": { "type": "string", "required": true },
        "evidence": { "type": "array", "required": false }
      }
    },
    {
      "name": "quick_check",
      "description": "Quick assessment of a claim's characteristics",
      "parameters": {
        "claim_text": { "type": "string", "required": true }
      }
    },
    {
      "name": "compare_sources",
      "description": "Compare how different sources report a claim",
      "parameters": {
        "claim_text": { "type": "string", "required": true },
        "sources": { "type": "array", "required": true }
      }
    },
    {
      "name": "get_verdict_summary",
      "description": "Get summary of verdicts",
      "parameters": {
        "claim_ids": { "type": "array", "required": false }
      }
    }
  ]
}
