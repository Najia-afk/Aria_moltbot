{
  "name": "aria-community",
  "version": "1.0.0",
  "description": "üåê Community management and growth for Social Architect",
  "author": "Aria Blue",
  "layer": 3,
  "dependencies": ["api_client", "social"],
  "support_level": "advanced_compatibility",
  "default_routing": false,
  "recommended_usage": "specialist_community_campaigns",
  "focus_affinity": ["social"],
  "tools": [
    {
      "name": "track_member",
      "description": "Add or update a community member",
      "parameters": {
        "type": "object",
        "properties": {
          "username": { "type": "string", "description": "The username of the member" },
          "tags": { "type": "array", "description": "Optional tags for the member" }
        },
        "required": ["username"]
      }
    },
    {
      "name": "record_engagement",
      "description": "Record member engagement activity",
      "parameters": {
        "type": "object",
        "properties": {
          "username": { "type": "string", "description": "The username of the member" },
          "engagement_type": { "type": "string", "description": "The type of engagement", "enum": ["post", "comment", "reaction", "share", "mention"] },
          "content_id": { "type": "string", "description": "Optional content ID for the engagement" }
        },
        "required": ["username", "engagement_type"]
      }
    },
    {
      "name": "get_community_health",
      "description": "Get overall community health metrics",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": []
      }
    },
    {
      "name": "identify_champions",
      "description": "Identify top community champions",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": { "type": "integer", "description": "Number of champions to return (default: 10)" }
        },
        "required": []
      }
    },
    {
      "name": "create_campaign",
      "description": "Create a community campaign",
      "parameters": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "description": "The name of the campaign" },
          "goal": { "type": "string", "description": "The goal of the campaign" },
          "duration_days": { "type": "integer", "description": "Duration in days (default: 30)" }
        },
        "required": ["name", "goal"]
      }
    },
    {
      "name": "get_growth_strategies",
      "description": "Get community growth strategies",
      "parameters": {
        "type": "object",
        "properties": {
          "current_size": { "type": "integer", "description": "Current community size" }
        },
        "required": []
      }
    },
    {
      "name": "generate_content_calendar",
      "description": "Generate a content calendar",
      "parameters": {
        "type": "object",
        "properties": {
          "days": { "type": "integer", "description": "Number of days to generate (default: 7)" },
          "posts_per_day": { "type": "integer", "description": "Posts per day (default: 2)" }
        },
        "required": []
      }
    }
  ],
  "run": "python3 /app/skills/run_skill.py community {{tool}} '{{args_json}}'"
}
