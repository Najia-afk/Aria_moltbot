{
  "name": "aria-schedule",
  "version": "1.0.0",
  "description": "Manage Aria's scheduled jobs, tasks, and background operations.",
  "author": "Aria Team",
  "layer": 4,
  "dependencies": [
    "api_client"
  ],
  "focus_affinity": [
    "orchestrator"
  ],
  "tools": [
    {
      "name": "list_jobs",
      "description": "List all scheduled jobs.",
      "parameters": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": [
              "active",
              "paused",
              "all"
            ],
            "description": "Filter by job status"
          }
        }
      }
    },
    {
      "name": "get_due_jobs",
      "description": "Get jobs that are currently due for execution.",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "mark_job_run",
      "description": "Mark a job as having been run / manually trigger execution.",
      "parameters": {
        "type": "object",
        "properties": {
          "job_id": {
            "type": "integer",
            "description": "Job ID to mark as run"
          },
          "force": {
            "type": "boolean",
            "description": "Force execution even if not due"
          }
        },
        "required": [
          "job_id"
        ]
      }
    },
    {
      "name": "create_job",
      "description": "Create a new scheduled job.",
      "parameters": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Job type (research, code, analysis, etc.)"
          },
          "prompt": {
            "type": "string",
            "description": "Job description/prompt"
          },
          "priority": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ],
            "description": "Job priority"
          },
          "context": {
            "type": "object",
            "description": "Additional context for the job"
          }
        },
        "required": [
          "type",
          "prompt"
        ]
      }
    },
    {
      "name": "get_job",
      "description": "Get details of a specific scheduled job.",
      "parameters": {
        "type": "object",
        "properties": {
          "job_id": {
            "type": "integer",
            "description": "Job ID"
          }
        },
        "required": [
          "job_id"
        ]
      }
    },
    {
      "name": "delete_job",
      "description": "Delete a scheduled job.",
      "parameters": {
        "type": "object",
        "properties": {
          "job_id": {
            "type": "integer",
            "description": "Job ID to delete"
          }
        },
        "required": [
          "job_id"
        ]
      }
    },
    {
      "name": "enable_job",
      "description": "Enable a paused scheduled job.",
      "parameters": {
        "type": "object",
        "properties": {
          "job_id": {
            "type": "integer",
            "description": "Job ID to enable"
          }
        },
        "required": [
          "job_id"
        ]
      }
    },
    {
      "name": "disable_job",
      "description": "Disable/pause a scheduled job.",
      "parameters": {
        "type": "object",
        "properties": {
          "job_id": {
            "type": "integer",
            "description": "Job ID to disable"
          }
        },
        "required": [
          "job_id"
        ]
      }
    }
  ],
  "run": "python3 /app/skills/run_skill.py schedule {{tool}} '{{args_json}}'"
}
