{
  "name": "aria-performance",
  "version": "1.0.0",
  "description": "Log and query Aria's performance reviews and self-assessments.",
  "author": "Aria Team",
  "layer": 4,
  "dependencies": [
    "api_client"
  ],
  "focus_affinity": [
    "orchestrator"
  ],
  "tools": [
    {
      "name": "log_review",
      "description": "Log a performance review or self-assessment entry.",
      "parameters": {
        "type": "object",
        "properties": {
          "period": {
            "type": "string",
            "description": "Review period (daily, weekly, monthly)"
          },
          "score": {
            "type": "number",
            "description": "Performance score (0-100)"
          },
          "summary": {
            "type": "string",
            "description": "Summary of performance"
          },
          "strengths": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of strengths identified"
          },
          "improvements": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Areas for improvement"
          },
          "metadata": {
            "type": "object",
            "description": "Additional metadata"
          }
        },
        "required": [
          "period",
          "summary"
        ]
      }
    },
    {
      "name": "get_reviews",
      "description": "Get performance review history.",
      "parameters": {
        "type": "object",
        "properties": {
          "period": {
            "type": "string",
            "description": "Filter by period type"
          },
          "limit": {
            "type": "integer",
            "description": "Maximum entries to return (default: 20)"
          }
        }
      }
    },
    {
      "name": "get_improvement_summary",
      "description": "Get performance statistics, trends, and improvement summary.",
      "parameters": {
        "type": "object",
        "properties": {
          "days": {
            "type": "integer",
            "description": "Number of days to analyze (default: 30)"
          }
        }
      }
    },
    {
      "name": "get_metrics",
      "description": "Get current performance metrics.",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    }
  ],
  "run": "python3 /app/skills/run_skill.py performance {{tool}} '{{args_json}}'"
}
