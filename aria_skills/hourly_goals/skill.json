{
  "name": "aria-hourly-goals",
  "version": "1.0.0",
  "description": "Manage Aria's hourly goals and micro-tasks for short-term focus.",
  "author": "Aria Team",
  "layer": 4,
  "dependencies": [
    "api_client",
    "goals"
  ],
  "focus_affinity": [
    "orchestrator"
  ],
  "tools": [
    {
      "name": "set_goal",
      "description": "Create an hourly goal for focused short-term work.",
      "parameters": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Goal title"
          },
          "description": {
            "type": "string",
            "description": "Detailed description"
          },
          "target_hour": {
            "type": "string",
            "description": "Target hour (ISO timestamp)"
          },
          "priority": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ],
            "description": "Priority level"
          },
          "parent_goal_id": {
            "type": "integer",
            "description": "Link to parent main goal"
          }
        },
        "required": [
          "title"
        ]
      }
    },
    {
      "name": "get_current_goals",
      "description": "List current hourly goals with optional status filter.",
      "parameters": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": [
              "pending",
              "in_progress",
              "completed",
              "failed",
              "all"
            ],
            "description": "Filter by status"
          },
          "date": {
            "type": "string",
            "description": "Filter by date (YYYY-MM-DD)"
          }
        }
      }
    },
    {
      "name": "complete_goal",
      "description": "Mark an hourly goal as completed.",
      "parameters": {
        "type": "object",
        "properties": {
          "goal_id": {
            "type": "integer",
            "description": "Goal ID to complete"
          },
          "notes": {
            "type": "string",
            "description": "Completion notes"
          }
        },
        "required": [
          "goal_id"
        ]
      }
    },
    {
      "name": "get_day_summary",
      "description": "Get hourly goal completion statistics and day summary.",
      "parameters": {
        "type": "object",
        "properties": {
          "days": {
            "type": "integer",
            "description": "Days to analyze (default: 7)"
          }
        }
      }
    },
    {
      "name": "clear_past_goals",
      "description": "Clear completed or expired hourly goals from past periods.",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    }
  ],
  "run": "python3 /app/skills/run_skill.py hourly_goals {{tool}} '{{args_json}}'"
}
