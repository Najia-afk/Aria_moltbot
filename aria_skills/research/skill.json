{
  "name": "aria-research",
  "version": "1.0.0",
  "description": "ðŸ“° Research and information gathering for Journalist",
  "author": "Aria Blue",
  "layer": 3,
  "dependencies": ["api_client"],
  "focus_affinity": ["journalist"],
  "tools": [
    {
      "name": "create_project",
      "description": "Create a new research project",
      "parameters": {
        "type": "object",
        "properties": {
          "topic": { "type": "string", "description": "The research topic" },
          "initial_questions": { "type": "array", "description": "Optional initial research questions" }
        },
        "required": ["topic"]
      }
    },
    {
      "name": "add_source",
      "description": "Add a source to a research project",
      "parameters": {
        "type": "object",
        "properties": {
          "project_id": { "type": "string", "description": "The project ID to add the source to" },
          "title": { "type": "string", "description": "The title of the source" },
          "url": { "type": "string", "description": "Optional URL of the source" },
          "author": { "type": "string", "description": "Optional author of the source" },
          "date": { "type": "string", "description": "Optional publication date" },
          "summary": { "type": "string", "description": "Optional summary of the source" }
        },
        "required": ["project_id", "title"]
      }
    },
    {
      "name": "add_note",
      "description": "Add a research note",
      "parameters": {
        "type": "object",
        "properties": {
          "project_id": { "type": "string", "description": "The project ID to add the note to" },
          "content": { "type": "string", "description": "The content of the note" },
          "source_ids": { "type": "array", "description": "Optional source IDs the note references" },
          "tags": { "type": "array", "description": "Optional tags for the note" }
        },
        "required": ["project_id", "content"]
      }
    },
    {
      "name": "generate_questions",
      "description": "Generate research questions",
      "parameters": {
        "type": "object",
        "properties": {
          "project_id": { "type": "string", "description": "The project ID to generate questions for" },
          "depth": { "type": "string", "description": "The depth of questions (default: medium)", "enum": ["surface", "medium", "deep"] }
        },
        "required": ["project_id"]
      }
    },
    {
      "name": "assess_sources",
      "description": "Assess source quality and coverage",
      "parameters": {
        "type": "object",
        "properties": {
          "project_id": { "type": "string", "description": "The project ID to assess" }
        },
        "required": ["project_id"]
      }
    },
    {
      "name": "synthesize",
      "description": "Synthesize research into a summary",
      "parameters": {
        "type": "object",
        "properties": {
          "project_id": { "type": "string", "description": "The project ID to synthesize" }
        },
        "required": ["project_id"]
      }
    },
    {
      "name": "get_bibliography",
      "description": "Generate bibliography",
      "parameters": {
        "type": "object",
        "properties": {
          "project_id": { "type": "string", "description": "The project ID to generate bibliography for" },
          "style": { "type": "string", "description": "The bibliography style (default: apa)", "enum": ["apa", "mla", "chicago"] }
        },
        "required": ["project_id"]
      }
    }
  ],
  "run": "python3 /app/skills/run_skill.py research {{tool}} '{{args_json}}'"
}
