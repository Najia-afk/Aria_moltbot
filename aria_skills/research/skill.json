{
  "name": "aria-research",
  "version": "1.0.0",
  "description": "ðŸ“° Research and information gathering for Journalist",
  "author": "Aria Blue",
  "layer": 3,
  "dependencies": [
    "api_client"
  ],
  "focus_affinity": [
    "journalist"
  ],
  "tools": [
    {
      "name": "start_project",
      "description": "Create and start a new research project.",
      "parameters": {
        "type": "object",
        "properties": {
          "topic": {
            "type": "string",
            "description": "The research topic"
          },
          "initial_questions": {
            "type": "array",
            "description": "Optional initial research questions"
          }
        },
        "required": [
          "topic"
        ]
      }
    },
    {
      "name": "add_source",
      "description": "Add a source to a research project.",
      "parameters": {
        "type": "object",
        "properties": {
          "project_id": {
            "type": "string",
            "description": "The project ID to add the source to"
          },
          "title": {
            "type": "string",
            "description": "The title of the source"
          },
          "url": {
            "type": "string",
            "description": "Optional URL of the source"
          },
          "author": {
            "type": "string",
            "description": "Optional author of the source"
          },
          "date": {
            "type": "string",
            "description": "Optional publication date"
          },
          "summary": {
            "type": "string",
            "description": "Optional summary of the source"
          }
        },
        "required": [
          "project_id",
          "title"
        ]
      }
    },
    {
      "name": "add_finding",
      "description": "Add a research finding or note to a project.",
      "parameters": {
        "type": "object",
        "properties": {
          "project_id": {
            "type": "string",
            "description": "The project ID to add the finding to"
          },
          "content": {
            "type": "string",
            "description": "The content of the finding"
          },
          "source_ids": {
            "type": "array",
            "description": "Optional source IDs the finding references"
          },
          "tags": {
            "type": "array",
            "description": "Optional tags for the finding"
          }
        },
        "required": [
          "project_id",
          "content"
        ]
      }
    },
    {
      "name": "set_thesis",
      "description": "Set or refine the research thesis for a project.",
      "parameters": {
        "type": "object",
        "properties": {
          "project_id": {
            "type": "string",
            "description": "The project ID"
          },
          "thesis": {
            "type": "string",
            "description": "The thesis statement"
          }
        },
        "required": [
          "project_id",
          "thesis"
        ]
      }
    },
    {
      "name": "evaluate_sources",
      "description": "Assess source quality and coverage for a project.",
      "parameters": {
        "type": "object",
        "properties": {
          "project_id": {
            "type": "string",
            "description": "The project ID to assess"
          }
        },
        "required": [
          "project_id"
        ]
      }
    },
    {
      "name": "synthesize",
      "description": "Synthesize research into a summary.",
      "parameters": {
        "type": "object",
        "properties": {
          "project_id": {
            "type": "string",
            "description": "The project ID to synthesize"
          }
        },
        "required": [
          "project_id"
        ]
      }
    },
    {
      "name": "list_projects",
      "description": "List all research projects.",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    }
  ],
  "run": "python3 /app/skills/run_skill.py research {{tool}} '{{args_json}}'"
}
