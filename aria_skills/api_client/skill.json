{
  "name": "aria-api-client",
  "version": "1.0.0",
  "description": "Centralized HTTP client for all aria-api interactions. Use for activities, thoughts, memories, goals, knowledge graph, social posts, heartbeats, performance logs, and tasks.",
  "author": "Aria Team",
  "tools": [
    {
      "name": "get_activities",
      "description": "Get recent activities from the activity log.",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "description": "Maximum number of activities to return (default: 100)"
          }
        }
      }
    },
    {
      "name": "create_activity",
      "description": "Log an activity to the activity log.",
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "The action performed"
          },
          "skill": {
            "type": "string",
            "description": "Skill that performed the action"
          },
          "details": {
            "type": "object",
            "description": "Additional details as JSON"
          },
          "success": {
            "type": "boolean",
            "description": "Whether the action succeeded (default: true)"
          },
          "error_message": {
            "type": "string",
            "description": "Error message if action failed"
          }
        },
        "required": ["action"]
      }
    },
    {
      "name": "get_security_events",
      "description": "Get security events with optional filtering.",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "description": "Maximum number of events (default: 100)"
          },
          "threat_level": {
            "type": "string",
            "description": "Filter by threat level (LOW, MEDIUM, HIGH, CRITICAL)"
          },
          "blocked_only": {
            "type": "boolean",
            "description": "Only show blocked events (default: false)"
          }
        }
      }
    },
    {
      "name": "create_security_event",
      "description": "Log a security event.",
      "parameters": {
        "type": "object",
        "properties": {
          "threat_level": {
            "type": "string",
            "description": "Threat level (LOW, MEDIUM, HIGH, CRITICAL)"
          },
          "threat_type": {
            "type": "string",
            "description": "Type of threat"
          },
          "threat_patterns": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Patterns that triggered the alert"
          },
          "input_preview": {
            "type": "string",
            "description": "Preview of the triggering input"
          },
          "source": {
            "type": "string",
            "description": "Source of the event (default: api)"
          },
          "blocked": {
            "type": "boolean",
            "description": "Whether the action was blocked"
          },
          "details": {
            "type": "object",
            "description": "Additional details"
          }
        }
      }
    },
    {
      "name": "get_security_stats",
      "description": "Get security event statistics.",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "get_thoughts",
      "description": "Get recent thoughts.",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "description": "Maximum number of thoughts to return (default: 100)"
          }
        }
      }
    },
    {
      "name": "create_thought",
      "description": "Create a new thought.",
      "parameters": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "description": "The thought content"
          },
          "category": {
            "type": "string",
            "description": "Thought category (default: general)"
          },
          "metadata": {
            "type": "object",
            "description": "Additional metadata"
          }
        },
        "required": ["content"]
      }
    },
    {
      "name": "get_memories",
      "description": "Get memories, optionally filtered by category.",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "description": "Maximum number of memories (default: 100)"
          },
          "category": {
            "type": "string",
            "description": "Filter by category"
          }
        }
      }
    },
    {
      "name": "get_memory",
      "description": "Get a specific memory by key.",
      "parameters": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "description": "The memory key"
          }
        },
        "required": ["key"]
      }
    },
    {
      "name": "set_memory",
      "description": "Create or update a memory.",
      "parameters": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "description": "The memory key"
          },
          "value": {
            "type": "string",
            "description": "The memory value (can be JSON string)"
          },
          "category": {
            "type": "string",
            "description": "Memory category (default: general)"
          }
        },
        "required": ["key", "value"]
      }
    },
    {
      "name": "delete_memory",
      "description": "Delete a memory by key.",
      "parameters": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "description": "The memory key to delete"
          }
        },
        "required": ["key"]
      }
    },
    {
      "name": "get_goals",
      "description": "Get goals, optionally filtered by status.",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "description": "Maximum number of goals (default: 100)"
          },
          "status": {
            "type": "string",
            "description": "Filter by status (pending, in_progress, completed)"
          }
        }
      }
    },
    {
      "name": "create_goal",
      "description": "Create a new goal.",
      "parameters": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Goal title"
          },
          "description": {
            "type": "string",
            "description": "Goal description"
          },
          "priority": {
            "type": "integer",
            "description": "Priority level (1-5, default: 2)"
          },
          "status": {
            "type": "string",
            "description": "Initial status (default: pending)"
          },
          "due_date": {
            "type": "string",
            "description": "Due date in ISO format"
          }
        },
        "required": ["title"]
      }
    },
    {
      "name": "update_goal",
      "description": "Update an existing goal.",
      "parameters": {
        "type": "object",
        "properties": {
          "goal_id": {
            "type": "string",
            "description": "The goal ID to update"
          },
          "status": {
            "type": "string",
            "description": "New status"
          },
          "progress": {
            "type": "integer",
            "description": "Progress percentage (0-100)"
          },
          "priority": {
            "type": "integer",
            "description": "New priority level"
          }
        },
        "required": ["goal_id"]
      }
    },
    {
      "name": "delete_goal",
      "description": "Delete a goal.",
      "parameters": {
        "type": "object",
        "properties": {
          "goal_id": {
            "type": "string",
            "description": "The goal ID to delete"
          }
        },
        "required": ["goal_id"]
      }
    },
    {
      "name": "get_hourly_goals",
      "description": "Get hourly goals for the current day.",
      "parameters": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "description": "Filter by status"
          }
        }
      }
    },
    {
      "name": "create_hourly_goal",
      "description": "Create an hourly goal.",
      "parameters": {
        "type": "object",
        "properties": {
          "hour_slot": {
            "type": "integer",
            "description": "Hour slot (0-23)"
          },
          "goal_type": {
            "type": "string",
            "description": "Type of goal"
          },
          "description": {
            "type": "string",
            "description": "Goal description"
          },
          "status": {
            "type": "string",
            "description": "Initial status (default: pending)"
          }
        },
        "required": ["hour_slot", "goal_type", "description"]
      }
    },
    {
      "name": "update_hourly_goal",
      "description": "Update an hourly goal status.",
      "parameters": {
        "type": "object",
        "properties": {
          "goal_id": {
            "type": "integer",
            "description": "The hourly goal ID"
          },
          "status": {
            "type": "string",
            "description": "New status"
          }
        },
        "required": ["goal_id", "status"]
      }
    },
    {
      "name": "get_knowledge_graph",
      "description": "Get the full knowledge graph with entities and relations.",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "get_entities",
      "description": "Get knowledge graph entities.",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "description": "Maximum entities (default: 100)"
          },
          "entity_type": {
            "type": "string",
            "description": "Filter by entity type"
          }
        }
      }
    },
    {
      "name": "create_entity",
      "description": "Create a knowledge graph entity.",
      "parameters": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Entity name"
          },
          "entity_type": {
            "type": "string",
            "description": "Entity type (person, place, concept, etc.)"
          },
          "properties": {
            "type": "object",
            "description": "Additional properties"
          }
        },
        "required": ["name", "entity_type"]
      }
    },
    {
      "name": "create_relation",
      "description": "Create a relation between entities.",
      "parameters": {
        "type": "object",
        "properties": {
          "from_entity": {
            "type": "string",
            "description": "Source entity name"
          },
          "to_entity": {
            "type": "string",
            "description": "Target entity name"
          },
          "relation_type": {
            "type": "string",
            "description": "Type of relation"
          },
          "properties": {
            "type": "object",
            "description": "Relation properties"
          }
        },
        "required": ["from_entity", "to_entity", "relation_type"]
      }
    },
    {
      "name": "get_social_posts",
      "description": "Get social posts.",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "description": "Maximum posts (default: 50)"
          },
          "platform": {
            "type": "string",
            "description": "Filter by platform"
          }
        }
      }
    },
    {
      "name": "create_social_post",
      "description": "Create a social post.",
      "parameters": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "description": "Post content"
          },
          "platform": {
            "type": "string",
            "description": "Platform (default: moltbook)"
          },
          "visibility": {
            "type": "string",
            "description": "Visibility (default: public)"
          },
          "reply_to": {
            "type": "string",
            "description": "ID of post to reply to"
          },
          "metadata": {
            "type": "object",
            "description": "Additional metadata"
          }
        },
        "required": ["content"]
      }
    },
    {
      "name": "get_heartbeats",
      "description": "Get heartbeat logs.",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "description": "Maximum heartbeats (default: 50)"
          }
        }
      }
    },
    {
      "name": "get_latest_heartbeat",
      "description": "Get the most recent heartbeat.",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "create_heartbeat",
      "description": "Log a heartbeat.",
      "parameters": {
        "type": "object",
        "properties": {
          "beat_number": {
            "type": "integer",
            "description": "Beat sequence number"
          },
          "status": {
            "type": "string",
            "description": "Health status (default: healthy)"
          },
          "details": {
            "type": "object",
            "description": "Additional details"
          }
        }
      }
    },
    {
      "name": "get_performance_logs",
      "description": "Get performance review logs.",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "description": "Maximum logs (default: 50)"
          }
        }
      }
    },
    {
      "name": "create_performance_log",
      "description": "Create a performance review log.",
      "parameters": {
        "type": "object",
        "properties": {
          "review_period": {
            "type": "string",
            "description": "Period being reviewed"
          },
          "successes": {
            "type": "string",
            "description": "Summary of successes"
          },
          "failures": {
            "type": "string",
            "description": "Summary of failures"
          },
          "improvements": {
            "type": "string",
            "description": "Suggested improvements"
          }
        },
        "required": ["review_period"]
      }
    },
    {
      "name": "get_tasks",
      "description": "Get pending complex tasks.",
      "parameters": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "description": "Filter by status"
          }
        }
      }
    },
    {
      "name": "create_task",
      "description": "Create a pending complex task.",
      "parameters": {
        "type": "object",
        "properties": {
          "task_type": {
            "type": "string",
            "description": "Type of task"
          },
          "description": {
            "type": "string",
            "description": "Task description"
          },
          "agent_type": {
            "type": "string",
            "description": "Agent to handle the task"
          },
          "priority": {
            "type": "string",
            "description": "Priority (low, medium, high)"
          }
        },
        "required": ["task_type", "description", "agent_type"]
      }
    },
    {
      "name": "update_task",
      "description": "Update a task status.",
      "parameters": {
        "type": "object",
        "properties": {
          "task_id": {
            "type": "string",
            "description": "The task ID"
          },
          "status": {
            "type": "string",
            "description": "New status"
          },
          "result": {
            "type": "string",
            "description": "Task result"
          }
        },
        "required": ["task_id", "status"]
      }
    },
    {
      "name": "get_schedule",
      "description": "Get the schedule tick status.",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "trigger_schedule_tick",
      "description": "Trigger a manual schedule tick.",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "get_jobs",
      "description": "Get scheduled jobs.",
      "parameters": {
        "type": "object",
        "properties": {
          "live": {
            "type": "boolean",
            "description": "Include live job status (default: false)"
          }
        }
      }
    },
    {
      "name": "sync_jobs",
      "description": "Sync jobs from OpenClaw scheduler.",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    }
  ],
  "run": "python3 /root/.openclaw/workspace/skills/run_skill.py api_client {{tool}} '{{args_json}}'"
}
