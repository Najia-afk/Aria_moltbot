{
  "name": "aria-experiment",
  "version": "1.0.0",
  "description": "ðŸ§ª ML experiment tracking and model management for Data Architect",
  "author": "Aria Blue",
  "layer": 3,
  "dependencies": ["api_client"],
  "support_level": "advanced_compatibility",
  "default_routing": false,
  "recommended_usage": "specialist_experiment_tracking",
  "focus_affinity": ["data"],
  "tools": [
    {
      "name": "create_experiment",
      "description": "Create a new ML experiment",
      "parameters": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "description": "The name of the experiment" },
          "parameters": { "type": "object", "description": "The experiment parameters" },
          "tags": { "type": "array", "description": "Optional tags for the experiment" }
        },
        "required": ["name", "parameters"]
      }
    },
    {
      "name": "log_metrics",
      "description": "Log metrics to an experiment",
      "parameters": {
        "type": "object",
        "properties": {
          "experiment_id": { "type": "string", "description": "The experiment ID to log metrics to" },
          "metrics": { "type": "object", "description": "The metrics to log" },
          "step": { "type": "integer", "description": "Optional step number" }
        },
        "required": ["experiment_id", "metrics"]
      }
    },
    {
      "name": "complete_experiment",
      "description": "Mark experiment as completed",
      "parameters": {
        "type": "object",
        "properties": {
          "experiment_id": { "type": "string", "description": "The experiment ID to complete" },
          "status": { "type": "string", "description": "The completion status (default: completed)" }
        },
        "required": ["experiment_id"]
      }
    },
    {
      "name": "compare_experiments",
      "description": "Compare multiple experiments",
      "parameters": {
        "type": "object",
        "properties": {
          "experiment_ids": { "type": "array", "description": "List of experiment IDs to compare" },
          "metrics": { "type": "array", "description": "Optional list of metrics to compare" }
        },
        "required": ["experiment_ids"]
      }
    },
    {
      "name": "register_model",
      "description": "Register a model version",
      "parameters": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "description": "The name of the model" },
          "experiment_id": { "type": "string", "description": "The experiment ID the model is from" },
          "metrics": { "type": "object", "description": "The model metrics" },
          "path": { "type": "string", "description": "Optional path to the model" }
        },
        "required": ["name", "experiment_id", "metrics"]
      }
    },
    {
      "name": "promote_model",
      "description": "Promote model to a new stage",
      "parameters": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "description": "The name of the model" },
          "version": { "type": "integer", "description": "The version of the model" },
          "stage": { "type": "string", "description": "The stage to promote to", "enum": ["development", "staging", "production"] }
        },
        "required": ["name", "version", "stage"]
      }
    }
  ],
  "run": "python3 /root/.openclaw/workspace/skills/run_skill.py experiment {{tool}} '{{args_json}}'"
}
