{
  "name": "aria-cicd",
  "version": "1.0.0",
  "description": "ðŸ”„ CI/CD pipeline management and automation for DevSecOps",
  "author": "Aria Blue",
  "tools": [
    {
      "name": "generate_workflow",
      "description": "Generate a GitHub Actions workflow file",
      "parameters": {
        "type": "object",
        "properties": {
          "workflow_type": { "type": "string", "description": "The type of workflow to generate", "enum": ["test", "build", "deploy", "security"] },
          "language": { "type": "string", "description": "The programming language (default: python)" },
          "options": { "type": "object", "description": "Additional workflow options" }
        },
        "required": ["workflow_type"]
      }
    },
    {
      "name": "validate_workflow",
      "description": "Validate a GitHub Actions workflow file",
      "parameters": {
        "type": "object",
        "properties": {
          "workflow_path": { "type": "string", "description": "Path to the workflow file to validate" }
        },
        "required": ["workflow_path"]
      }
    },
    {
      "name": "generate_dockerfile",
      "description": "Generate a secure Dockerfile",
      "parameters": {
        "type": "object",
        "properties": {
          "language": { "type": "string", "description": "The programming language (default: python)" },
          "base_image": { "type": "string", "description": "Base Docker image to use" },
          "options": { "type": "object", "description": "Additional Dockerfile options" }
        },
        "required": []
      }
    },
    {
      "name": "analyze_deployment",
      "description": "Analyze a docker-compose deployment configuration",
      "parameters": {
        "type": "object",
        "properties": {
          "compose_file": { "type": "string", "description": "Path to the docker-compose file" }
        },
        "required": ["compose_file"]
      }
    }
  ],
  "run": "python3 /root/.openclaw/workspace/skills/run_skill.py ci_cd {{tool}} '{{args_json}}'"
}
