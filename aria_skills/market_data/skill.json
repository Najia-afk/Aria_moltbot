{
  "name": "aria-market-data",
  "version": "1.0.0",
  "description": "ðŸ“ˆ Cryptocurrency market data and analysis for Crypto Trader",
  "author": "Aria Blue",
  "layer": 3,
  "dependencies": [
    "api_client"
  ],
  "focus_affinity": [
    "trader"
  ],
  "tools": [
    {
      "name": "get_price",
      "description": "Get current price for a trading pair.",
      "parameters": {
        "type": "object",
        "properties": {
          "symbol": {
            "type": "string",
            "description": "The trading pair symbol (e.g., BTC/USDT)"
          }
        },
        "required": [
          "symbol"
        ]
      }
    },
    {
      "name": "get_market_overview",
      "description": "Get overall market overview and indicators.",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "search_coins",
      "description": "Search for coins by name or symbol.",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query (coin name or symbol)"
          }
        },
        "required": [
          "query"
        ]
      }
    },
    {
      "name": "get_coin_details",
      "description": "Get detailed information about a specific coin.",
      "parameters": {
        "type": "object",
        "properties": {
          "coin_id": {
            "type": "string",
            "description": "Coin identifier"
          }
        },
        "required": [
          "coin_id"
        ]
      }
    }
  ],
  "run": "python3 /app/skills/run_skill.py market_data {{tool}} '{{args_json}}'"
}
