{
  "name": "aria-data-pipeline",
  "version": "1.0.0",
  "description": "ðŸ“Š Data pipeline management and ETL operations for Data Architect",
  "author": "Aria Blue",
  "layer": 3,
  "dependencies": ["api_client", "database"],
  "focus_affinity": ["data"],
  "tools": [
    {
      "name": "define_pipeline",
      "description": "Define a new data pipeline",
      "parameters": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "description": "The name of the pipeline" },
          "steps": { "type": "array", "description": "The steps in the pipeline" }
        },
        "required": ["name", "steps"]
      }
    },
    {
      "name": "validate_data",
      "description": "Validate data against a schema",
      "parameters": {
        "type": "object",
        "properties": {
          "data": { "type": "array", "description": "The data to validate" },
          "schema": { "type": "object", "description": "The schema to validate against" }
        },
        "required": ["data", "schema"]
      }
    },
    {
      "name": "infer_schema",
      "description": "Infer schema from data samples",
      "parameters": {
        "type": "object",
        "properties": {
          "data": { "type": "array", "description": "The data samples to infer schema from" }
        },
        "required": ["data"]
      }
    },
    {
      "name": "transform_data",
      "description": "Apply transformations to data",
      "parameters": {
        "type": "object",
        "properties": {
          "data": { "type": "array", "description": "The data to transform" },
          "transformations": { "type": "array", "description": "The transformations to apply" }
        },
        "required": ["data", "transformations"]
      }
    },
    {
      "name": "data_quality_check",
      "description": "Run data quality checks",
      "parameters": {
        "type": "object",
        "properties": {
          "data": { "type": "array", "description": "The data to check" }
        },
        "required": ["data"]
      }
    }
  ],
  "run": "python3 /app/skills/run_skill.py data_pipeline {{tool}} '{{args_json}}'"
}
